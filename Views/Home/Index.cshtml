        <!-- INDEX CAROUSEL(Top sellers) -->
        <div id="carouselTopSellers" class="carousel carousel-dark slide carousel-fade" data-bs-ride="carousel">

            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselTopSellers" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselTopSellers" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselTopSellers" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active img-fluid" data-bs-interval="10000">
                    <img src="Images/Bob-Ross-Reflections.jpg" class="imgTopSeller1">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="TopSeller1">Fetch artist</h5>
                        <p class="TopSellerCap1">Fetch short description</p>
                    </div>
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="https://img.evbuc.com/https%3A%2F%2Fcdn.evbuc.com%2Fimages%2F140020501%2F38059591182%2F1%2Foriginal.20210628-032143?h=200&w=450&auto=format%2Ccompress&q=75&sharp=10&rect=0%2C167%2C1226%2C613&s=7c2394dbc2ac2c6fbf3487a850a44670" class="imgTopSeller2">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="TopSeller2">Fetch artist</h5>
                        <p class="TopSellerCap2">Fetch short description</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://img-lumas-avensogmbh1.netdna-ssl.com/showimg_ime53_mobile.jpg" class="imgTopSeller3">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="TopSeller3">Fetch artist</h5>
                        <p class="TopSellerCap3">Fetch short description</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselTopSellers" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselTopSellers" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
